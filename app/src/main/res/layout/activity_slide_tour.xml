<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slide_tour"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.insite.fusebulb.SlideTourActivity">

    <ImageView
        android:id="@+id/slide_tour_slideBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_fusebulb"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/slide_tour_slideTitle"
            android:background="#FFCC33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/primary_text_size"
            android:paddingLeft="@dimen/primary_text_left_right_padding"
            android:paddingRight="@dimen/primary_text_left_right_padding"
            android:paddingTop="@dimen/primary_text_left_right_padding"
            android:paddingBottom="@dimen/primary_text_left_right_padding"
            android:text="Qutub minar is getting titled each year?"
            android:src="@android:drawable/arrow_up_float" />

        <TextView
            android:id="@+id/slide_tour_slideDescription"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/secondary_text_size"
            android:paddingLeft="@dimen/secondary_text_right_left_padding"
            android:paddingRight="@dimen/secondary_text_right_left_padding"
            android:paddingTop="@dimen/secondary_text_bottom_padding"
            android:paddingBottom="@dimen/primary_text_top_padding"
            android:lineSpacingMultiplier="1.2"
            android:text="In this equation, a and w are the amplitude and frequency values and t is the time. The equation contains a cosine function that causes the periodic wobbles during the animation. In order to reduce its amplitude with time we multiply the cosine by an exponential function. The following graph shows that the animation overshoots above the value 1 first and then settles closer to it."
            android:visibility="gone"
            android:src="@android:drawable/arrow_up_float" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabBulb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/colorAccent"
            android:layout_margin="@dimen/fab_margin"
            android:layout_gravity="bottom|center"
            android:src="@drawable/ic_fusebulb" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
